{% extends 'ZyliusParduotuveBundle:Admin:index.html.twig' %}
{% block admin_content %}
<h3 class="dark-grey">{{ 'product.create'|trans }}</h3>
    {% if message is defined %}
        <div class="alert alert-success">{{ message|trans }}</div>
    {% endif %}
    {% if form is defined  %}
        <div class="container-page">
            <div class="col-md-6">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="form-group col-lg-12">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="form-group col-lg-12">
                    {{ form_label(form.price) }}
                    {{ form_widget(form.price, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.price) }}
                </div>
                {{ form_rest(form) }}
                <div class="col-md-6">
                    <input type="submit" class="btn btn-primary"  value="{{ 'form.create'|trans }}" />
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    {% endif %}
{% endblock %}
