{% extends 'ZyliusParduotuveBundle::layout.html.twig' %}
{% block body %}
    <h3 class="dark-grey">{{ 'product.list'|trans }}</h3>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>{{ 'product.table.name'|trans }}</th>
            <th>{{ 'product.table.price'|trans }}</th></tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <th scope="row">{{ product.id }}</th>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if page > 0 %}<a  href="{{ path('zylius_parduotuve_homepage', {"page": page - 1 }) }}">{{ 'page.last'|trans }}</a>{% endif %}
    {% if products|length == 10 %}<a class="pull-right" href="{{ path('zylius_parduotuve_homepage', {"page": page + 1 }) }}">{{ 'page.next'|trans }}</a>{% endif %}
{% endblock %}


