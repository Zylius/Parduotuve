{% extends 'ZyliusParduotuveBundle::layout.html.twig' %}
{% block body %}
<h3 class="dark-grey">{{ 'user.edit'|trans }}</h3>
{% if message is defined %}
    <div class="alert alert-success">{{ message|trans }}</div>
{% endif %}
    {% if form is defined  %}
<div class="container-page">
    <div class="col-md-6">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-group col-lg-12">
            {{ form_label(form.username) }}
            {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.username) }}
        </div>

        <div class="form-group col-lg-12">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="form-group col-lg-12">
        {% if form.roles is defined %}
            {{ form_label(form.roles) }}
            {% for role in form.roles %}
                <div class="form-group col-lg-12">
                    {% set attributes = [] %}
                    {% if role.vars.value == 'ROLE_USER' %}
                    {% set attributes = { 'attr': {'disabled' : 'true'} } %}
                    {% endif %}
                    {{ form_widget(role, attributes) }}
                    {{ form_label(role) }}
                </div>
        {% endfor %}
        {{ form_errors(form.roles) }}
        </div>
        {% endif %}
        {{ form_rest(form) }}
        <div class="col-md-6">
            <input type="submit" class="btn btn-primary"  value="{{ 'form.update'|trans }}" />
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endif %}
{% endblock %}

