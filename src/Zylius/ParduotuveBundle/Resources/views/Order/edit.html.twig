{% extends 'ZyliusParduotuveBundle:Order:index.html.twig' %}
{% block order_content %}
<h3 class="dark-grey">{{ 'order.edit'|trans }}</h3>
    {% if message is defined %}
        <div class="alert alert-success">{{ message|trans }}</div>
    {% else %}
    <div class="container-page">
        <div class="col-md-6">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-group col-lg-12">
                {{ form_label(form.date) }}
                {{ form_widget(form.date) }}
                {{ form_errors(form.date) }}
            </div>
            <div class="form-group col-lg-12">
                {{ form_label(form.user) }}
                {{ form_widget(form.user, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.user) }}
            </div>
            <div class="form-group col-lg-12">
                {{ form_label(form.confirmer) }}
                {{ form_widget(form.confirmer, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.confirmer) }}
            </div>
            <div class="form-group col-lg-12">
                {{ form_label(form.products) }}
                {{ form_widget(form.products, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.products) }}
            </div>
            {{ form_rest(form) }}
            <div class="col-md-6">
                <input type="submit" class="btn btn-primary"  value="{{ 'form.update'|trans }}" />
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    {% endif %}
{% endblock %}

